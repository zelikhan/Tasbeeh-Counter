<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2DEAE"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:id="@+id/btnFatima"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#484F30"


            android:text="Tasbih \nFatima" />

        <Button
            android:id="@+id/btnKalma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#484F30"

            android:text="1st Kalma \n100 Times" />

        <Button
            android:id="@+id/btnAstagfar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#484F30"

            android:text="Astagfar \n100 Times" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:weightSum="3">

        <Button
            android:id="@+id/btnDarood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:backgroundTint="#484F30"
            android:text="Darood \n100 Times" />

        <Button
            android:id="@+id/btnAyet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"

            android:backgroundTint="#484F30"

            android:text="Ayet E Karima" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#484F30"

            android:text="Reset" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/txtselect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F8D062"
            android:backgroundTint="#372906"
            android:gravity="center"
            android:padding="5dp"

            android:text="Select Tasbeeh"
            android:textColor="#FFFAFA"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtcount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#816AC6A5"
            android:backgroundTint="#372907"
            android:gravity="center"
            android:padding="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="250sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btncount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="2"
        android:backgroundTint="#372906"

        android:text="Count"

        android:textColor="#E9E5D5"
        android:textSize="40sp" />
</LinearLayout>